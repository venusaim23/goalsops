<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/date_tv"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:text="Title" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/title_tv"
                android:layout_marginEnd="15dp"
                android:text="26/11/2006" />

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv"
                android:layout_alignStart="@+id/title_tv"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:text="Description lorem ipusum dor sit emet â€¦." />

            <TextView
                android:id="@+id/deadline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_tv"
                android:layout_alignStart="@+id/title_tv"
                android:layout_marginTop="10dp"
                android:text="Deadline" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_below="@+id/deadline_tv"
                android:layout_alignStart="@+id/title_tv"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="2dp"
                    android:text="25 May, 2022" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>